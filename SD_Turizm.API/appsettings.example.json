{
  "ConnectionStrings": {
    "DefaultConnection": "Server=YOUR_SERVER;Database=SD_Turizm;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "YOUR_SUPER_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS_LONG_AND_SECURE",
    "Issuer": "SD_Turizm_API",
    "Audience": "SD_Turizm_Client",
    "ExpiryInHours": 24
  },
  "HealthChecks": {
    "UI": {
      "EvaluationTimeInSeconds": 30,
      "MinimumSecondsBetweenFailureNotifications": 60
    }
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "Window": "00:01:00",
    "SegmentsPerWindow": 1,
    "QueueProcessingOrder": 0,
    "QueueLimit": 2
  },
  "AllowedHosts": "*"
} 