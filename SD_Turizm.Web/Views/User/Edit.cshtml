@model SD_Turizm.Web.Models.DTOs.UserDto
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Kullanıcılar</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Düzenle</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0">
                <i class="fas fa-user-edit"></i> Kullanıcı Düzenle: @Model.FirstName @Model.LastName
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Kullanıcı Bilgileri</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="CreatedAt" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad <span class="text-danger">*</span></label>
                                    <input asp-for="FirstName" class="form-control" required />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad <span class="text-danger">*</span></label>
                                    <input asp-for="LastName" class="form-control" required />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                                    <input asp-for="Username" class="form-control" readonly />
                                    <div class="form-text">Kullanıcı adı değiştirilemez.</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">E-posta <span class="text-danger">*</span></label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                                    <input asp-for="PhoneNumber" type="tel" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">Rol <span class="text-danger">*</span></label>
                                    <select asp-for="Role" class="form-select" required>
                                        <option value="">Rol Seçiniz</option>
                                        @if (ViewBag.Roles != null)
                                        {
                                            @foreach (var role in ViewBag.Roles)
                                            {
                                                <option value="@role.GetProperty("name").GetString()">@role.GetProperty("displayName").GetString()</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Aktif Kullanıcı
                                        </label>
                                        <div class="form-text">Pasif kullanıcılar sisteme giriş yapamaz.</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> İptal
                            </a>
                            <div>
                                <a href="@Url.Action("ChangePassword", new { id = Model.Id })" class="btn btn-warning me-2">
                                    <i class="fas fa-key"></i> Şifre Değiştir
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Güncelle
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Kullanıcı Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <p><strong>Kullanıcı ID:</strong> @Model.Id</p>
                            <p><strong>Kayıt Tarihi:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                            @if (Model.LastLoginDate.HasValue)
                            {
                                <p><strong>Son Giriş:</strong> @Model.LastLoginDate.Value.ToString("dd.MM.yyyy HH:mm")</p>
                            }
                            else
                            {
                                <p><strong>Son Giriş:</strong> <span class="text-muted">Hiç giriş yapmamış</span></p>
                            }
                            <p><strong>Durum:</strong> 
                                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-cogs"></i> İşlemler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-eye"></i> Detayları Görüntüle
                        </a>
                        <a href="@Url.Action("ChangePassword", new { id = Model.Id })" class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-key"></i> Şifre Değiştir
                        </a>
                        @if (Model.IsActive)
                        {
                            <button class="btn btn-outline-secondary btn-sm" onclick="toggleUserStatus(@Model.Id, false)">
                                <i class="fas fa-user-times"></i> Kullanıcıyı Pasifleştir
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-success btn-sm" onclick="toggleUserStatus(@Model.Id, true)">
                                <i class="fas fa-user-check"></i> Kullanıcıyı Aktifleştir
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleUserStatus(userId, activate) {
            const action = activate ? 'aktifleştirmek' : 'pasifleştirmek';
            if (confirm(`Bu kullanıcıyı ${action} istediğinizden emin misiniz?`)) {
                const url = activate ? `/User/Activate/${userId}` : `/User/Deactivate/${userId}`;
                
                fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('İşlem başarısız oldu.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Bir hata oluştu.');
                });
            }
        }
    </script>
}
