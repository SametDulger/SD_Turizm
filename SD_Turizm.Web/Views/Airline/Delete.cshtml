@model SD_Turizm.Web.Models.DTOs.AirlineDto

@{
    ViewData["Title"] = "Havayolu Sil";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-danger rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-trash fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Havayolu Sil</h1>
                <p class="text-muted mb-0">Havayolu kaydını silin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold bg-primary text-white">
                <i class="fas fa-exclamation-triangle me-2"></i>Bu havayolunu silmek istediğinizden emin misiniz?
            </h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle"></i> Dikkat!
                </h4>
                <p>Bu havayolu şirketini silmek istediğinizden emin misiniz?</p>
                <hr>
                <p class="mb-0">Bu işlem geri alınamaz!</p>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-hashtag"></i> ID
                        </dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-building"></i> Şirket Adı
                        </dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-code"></i> Kod
                        </dt>
                        <dd class="col-sm-8">@Model.Code</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-phone"></i> Telefon
                        </dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-envelope"></i> E-posta
                        </dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
            
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div> 
