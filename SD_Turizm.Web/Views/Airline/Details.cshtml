@model SD_Turizm.Web.Models.DTOs.AirlineDto

@{
    ViewData["Title"] = "Havayolu Detayları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-info rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-info-circle fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Havayolu Detayları</h1>
                <p class="text-muted mb-0">Havayolu bilgilerini görüntüleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 fw-bold bg-primary text-white">
                <i class="fas fa-info-circle me-2"></i>Havayolu Bilgileri
            </h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-hashtag"></i> ID
                        </dt>
                        <dd class="col-sm-8">@Model.Id</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-building"></i> Şirket Adı
                        </dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-code"></i> Kod
                        </dt>
                        <dd class="col-sm-8">@Model.Code</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="fas fa-phone"></i> Telefon
                        </dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                        
                        <dt class="col-sm-4">
                            <i class="fas fa-envelope"></i> E-posta
                        </dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
            
            <div class="d-flex gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div> 
