@model SD_Turizm.Web.Models.DTOs.PagedResult<SD_Turizm.Web.Models.DTOs.AuditLogDto>
@{
    ViewData["Title"] = "İşlem Kayıtları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-info rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-history fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">İşlem Kayıtları</h1>
                <p class="text-muted mb-0">Sistem işlem kayıtlarını görüntüleyin</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Statistics", "Audit")" class="btn btn-info">
                <i class="fas fa-chart-bar me-2"></i>İstatistikler
            </a>
            <a href="@Url.Action("ByDateRange", "Audit")" class="btn btn-outline-info">
                <i class="fas fa-calendar me-2"></i>Tarih Aralığı
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Toplam Kayıt</h6>
                            <h3 class="mb-0">@Model.TotalCount</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-database fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Sayfa</h6>
                            <h3 class="mb-0">@Model.Page / @Model.TotalPages</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Sayfa Başına</h6>
                            <h3 class="mb-0">@Model.PageSize</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Toplam Sayfa</h6>
                            <h3 class="mb-0">@Model.TotalPages</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calculator fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>İşlem Kayıtları
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Tablo</th>
                            <th>İşlem</th>
                            <th>Kayıt ID</th>
                            <th>Kullanıcı</th>
                            <th>IP Adresi</th>
                            <th>Tarih</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items != null && Model.Items.Any())
                        {
                            @foreach (var log in Model.Items)
                            {
                                <tr>
                                    <td>@log.Id</td>
                                    <td>
                                        <span class="badge bg-secondary">@log.TableName</span>
                                    </td>
                                    <td>
                                        @{
                                            var actionUpper = log.Action.ToUpper();
                                            var badgeClass = actionUpper switch
                                            {
                                                "INSERT" => "bg-success",
                                                "UPDATE" => "bg-warning", 
                                                "DELETE" => "bg-danger",
                                                _ => "bg-info"
                                            };
                                            var icon = actionUpper switch
                                            {
                                                "INSERT" => "fa-plus",
                                                "UPDATE" => "fa-edit",
                                                "DELETE" => "fa-trash", 
                                                _ => "fa-info"
                                            };
                                        }
                                        <span class="badge @badgeClass">
                                            <i class="fas @icon me-1"></i>@log.Action
                                        </span>
                                    </td>
                                    <td>@log.RecordId</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(log.Username))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                                    <span class="text-white fw-bold">@log.Username.Substring(0, 1).ToUpper()</span>
                                                </div>
                                                <span class="fw-medium">@log.Username</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@(log.IpAddress ?? "-")</small>
                                    </td>
                                    <td>
                                        <small class="text-muted">@log.Timestamp.ToString("dd.MM.yyyy HH:mm:ss")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Audit", new { id = log.Id })" 
                                               class="btn btn-sm btn-outline-info" title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-history fa-3x mb-3"></i>
                                        <p class="mb-0">Henüz işlem kaydı bulunmuyor.</p>
                                        <small>Sistem işlemleri burada görüntülenecek.</small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Sayfalama" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Audit", new { page = Model.Page - 1, pageSize = Model.PageSize })">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", "Audit", new { page = i, pageSize = Model.PageSize })">@i</a>
                    </li>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", "Audit", new { page = Model.Page + 1, pageSize = Model.PageSize })">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}

.btn-group .btn {
    border-radius: 0;
}

.btn-group .btn:first-child {
    border-top-left-radius: 0.375rem;
    border-bottom-left-radius: 0.375rem;
}

.btn-group .btn:last-child {
    border-top-right-radius: 0.375rem;
    border-bottom-right-radius: 0.375rem;
}
</style>
