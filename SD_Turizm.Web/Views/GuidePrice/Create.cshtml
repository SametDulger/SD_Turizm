@model SD_Turizm.Web.Models.DTOs.GuidePriceDto

@{
    ViewData["Title"] = "Rehber Fiyatı Ekle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-plus fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Rehber Fiyatı Ekle</h1>
                <p class="text-muted mb-0">Yeni rehber fiyatı oluşturun</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-plus me-2"></i>Yeni Rehber Fiyatı
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="GuideId" class="form-label"><i class="fas fa-user-tie"></i> Rehber ID</label>
                        <input asp-for="GuideId" class="form-control" required />
                        <span asp-validation-for="GuideId" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="DailyPrice" class="form-label"><i class="fas fa-dollar-sign"></i> Günlük Fiyat</label>
                        <input asp-for="DailyPrice" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="DailyPrice" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HalfDayPrice" class="form-label"><i class="fas fa-clock"></i> Yarım Gün Fiyatı</label>
                        <input asp-for="HalfDayPrice" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="HalfDayPrice" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Currency" class="form-label"><i class="fas fa-money-bill-wave"></i> Para Birimi</label>
                        <select asp-for="Currency" class="form-select" required>
                            <option value="">Para Birimi Seçin</option>
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                            <option value="TRY">TRY</option>
                        </select>
                        <span asp-validation-for="Currency" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 
