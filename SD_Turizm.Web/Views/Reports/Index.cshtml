@{
    ViewData["Title"] = "Raporlar";
}



<style>
    .report-dashboard {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 400px;
        padding: 60px 0;
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .report-dashboard::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>') repeat;
        opacity: 0.3;
    }
    
    .dashboard-content {
        position: relative;
        z-index: 2;
    }
    
    .report-cards {
        margin-top: -100px;
        position: relative;
        z-index: 3;
    }
    
    .report-card {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        overflow: hidden;
    }
    
    .report-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(90deg, var(--card-color) 0%, var(--card-color-light) 100%);
    }
    
    .report-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }
    
    .card-sales { --card-color: #007bff; --card-color-light: #66b3ff; }
    .card-financial { --card-color: #28a745; --card-color-light: #66d466; }
    .card-customer { --card-color: #17a2b8; --card-color-light: #66c5d1; }
    .card-product { --card-color: #fd7e14; --card-color-light: #ffa566; }
    
    .card-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        margin-bottom: 20px;
        background: linear-gradient(135deg, var(--card-color), var(--card-color-light));
    }
    
    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }
    
    .card-description {
        color: #6c757d;
        margin-bottom: 20px;
        line-height: 1.6;
    }
    
    .card-stats {
        display: flex;
        justify-content: space-between;
        margin-bottom: 25px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 10px;
    }
    
    .stat-item {
        text-align: center;
    }
    
    .stat-value {
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--card-color);
    }
    
    .stat-label {
        font-size: 0.8rem;
        color: #6c757d;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .card-action {
        text-align: center;
    }
    
    .btn-report {
        background: linear-gradient(135deg, var(--card-color), var(--card-color-light));
        border: none;
        color: white;
        padding: 12px 30px;
        border-radius: 25px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }
    
    .btn-report:hover {
        color: white;
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    
    .quick-stats {
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        margin-top: 40px;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
    }
    
    .quick-stat {
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        background: #f8f9fa;
    }
    
    .quick-stat-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 1.5rem;
        color: white;
    }
    
    .icon-primary { background: linear-gradient(135deg, #007bff, #66b3ff); }
    .icon-success { background: linear-gradient(135deg, #28a745, #66d466); }
    .icon-info { background: linear-gradient(135deg, #17a2b8, #66c5d1); }
    .icon-warning { background: linear-gradient(135deg, #fd7e14, #ffa566); }
    
    .quick-stat-value {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
    }
    
    .quick-stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    
    .report-features {
        margin-top: 40px;
        padding: 40px 0;
        background: #f8f9fa;
        border-radius: 15px;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .feature-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea, #764ba2);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        margin-right: 15px;
        font-size: 1.2rem;
    }
    
    .feature-text {
        color: #495057;
        font-weight: 500;
    }
</style>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="report-dashboard">
        <div class="container dashboard-content">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold mb-4">
                        <i class="fas fa-chart-line me-3"></i>
                        Analiz ve Raporlar
                    </h1>
                    <p class="lead mb-4">
                        İşletmenizin performansını detaylı raporlarla takip edin. 
                        Satış, finansal durum, müşteri analizi ve ürün performansı hakkında 
                        kapsamlı bilgiler edinin.
                    </p>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-clock me-1"></i>Gerçek Zamanlı
                        </div>
                        <div class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-download me-1"></i>PDF/Excel Export
                        </div>
                        <div class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-filter me-1"></i>Gelişmiş Filtreler
                        </div>
                        <div class="badge bg-light text-dark px-3 py-2">
                            <i class="fas fa-mobile-alt me-1"></i>Mobil Uyumlu
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="fas fa-chart-pie" style="font-size: 8rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Report Cards -->
        <div class="row report-cards">
            <!-- Satış Raporu -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="report-card card-sales">
                    <div class="card-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="card-title">Satış Raporu</div>
                    <div class="card-description">
                        Günlük, haftalık ve aylık satış performansınızı analiz edin. 
                        Toplam satış, gelir ve kâr marjı bilgilerine ulaşın.
                    </div>
                    <div class="card-stats">
                        <div class="stat-item">
                            <div class="stat-value">₺@(ViewBag.MonthlySales?.ToString("N0") ?? "0")</div>
                            <div class="stat-label">Bu Ay</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">₺@(ViewBag.WeeklySales?.ToString("N0") ?? "0")</div>
                            <div class="stat-label">Bu Hafta</div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a href="@Url.Action("SalesReport", "Reports")" class="btn btn-report">
                            <i class="fas fa-arrow-right me-2"></i>Raporu Görüntüle
                        </a>
                    </div>
                </div>
            </div>

            <!-- Finansal Rapor -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="report-card card-financial">
                    <div class="card-icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <div class="card-title">Finansal Rapor</div>
                    <div class="card-description">
                        Gelir, gider ve kârlılık analizleri ile finansal durumunuzu 
                        detaylı şekilde inceleyin.
                    </div>
                    <div class="card-stats">
                        <div class="stat-item">
                            <div class="stat-value">%@(ViewBag.ProfitMargin?.ToString("N1") ?? "0.0")</div>
                            <div class="stat-label">Kâr Marjı</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">₺@(ViewBag.MonthlyProfit?.ToString("N0") ?? "0")</div>
                            <div class="stat-label">Bu Ay Kâr</div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a href="@Url.Action("FinancialReport", "Reports")" class="btn btn-report">
                            <i class="fas fa-arrow-right me-2"></i>Raporu Görüntüle
                        </a>
                    </div>
                </div>
            </div>

            <!-- Müşteri Raporu -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="report-card card-customer">
                    <div class="card-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="card-title">Müşteri Raporu</div>
                    <div class="card-description">
                        Müşteri davranışları, segmentasyon ve sadakat analizleri 
                        ile müşteri portföyünüzü optimize edin.
                    </div>
                    <div class="card-stats">
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.TotalCustomers?.ToString() ?? "0")</div>
                            <div class="stat-label">Toplam</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.ActiveCustomers?.ToString() ?? "0")</div>
                            <div class="stat-label">Aktif</div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a href="@Url.Action("CustomerReport", "Reports")" class="btn btn-report">
                            <i class="fas fa-arrow-right me-2"></i>Raporu Görüntüle
                        </a>
                    </div>
                </div>
            </div>

            <!-- Ürün Raporu -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="report-card card-product">
                    <div class="card-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="card-title">Ürün Raporu</div>
                    <div class="card-description">
                        Ürün performansı, kategori analizi ve satış trendleri 
                        ile ürün portföyünüzü geliştirin.
                    </div>
                    <div class="card-stats">
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.ActivePackages?.ToString() ?? "0")</div>
                            <div class="stat-label">Aktif Ürün</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">@(ViewBag.TopSellingProducts?.ToString() ?? "0")</div>
                            <div class="stat-label">Popüler</div>
                        </div>
                    </div>
                    <div class="card-action">
                        <a href="@Url.Action("ProductReport", "Reports")" class="btn btn-report">
                            <i class="fas fa-arrow-right me-2"></i>Raporu Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Statistics -->
        <div class="quick-stats">
            <div class="text-center mb-4">
                <h3 class="fw-bold mb-2">
                    <i class="fas fa-chart-bar me-2"></i>
                    Hızlı İstatistikler
                </h3>
                <p class="text-muted">Güncel performans göstergeleri</p>
            </div>
            
            <div class="stats-grid">
                <div class="quick-stat">
                    <div class="quick-stat-icon icon-primary">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="quick-stat-value">₺@(ViewBag.MonthlySales?.ToString("N0") ?? "0")</div>
                    <div class="quick-stat-label">Bu Ay Toplam Satış</div>
                </div>
                
                <div class="quick-stat">
                    <div class="quick-stat-icon icon-success">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="quick-stat-value">₺@(ViewBag.WeeklySales?.ToString("N0") ?? "0")</div>
                    <div class="quick-stat-label">Bu Hafta Satış</div>
                </div>
                
                <div class="quick-stat">
                    <div class="quick-stat-icon icon-info">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="quick-stat-value">@(ViewBag.TotalCustomers?.ToString() ?? "0")</div>
                    <div class="quick-stat-label">Toplam Müşteri</div>
                </div>
                
                <div class="quick-stat">
                    <div class="quick-stat-icon icon-warning">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="quick-stat-value">@(ViewBag.ActivePackages?.ToString() ?? "0")</div>
                    <div class="quick-stat-label">Aktif Paket</div>
                </div>
            </div>
        </div>

    
    </div>
</div>