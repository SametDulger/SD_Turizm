@model SD_Turizm.Web.Models.DTOs.SalePersonDto

@{
    ViewData["Title"] = "Satış Personeli Sil";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-danger rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-trash-alt fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Satış Personeli Sil</h1>
                <p class="text-muted mb-0">Satış personeli kaydını silin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Satış Personeli Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Dikkat!</h5>
                <p class="mb-0">Bu satış personelini silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
            </div>
            
            <dl class="row">
                <dt class="col-sm-3 col-md-2"><i class="fas fa-hashtag"></i> ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.Id</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-user"></i> Ad</dt>
                <dd class="col-sm-9 col-md-10">@Model.FirstName</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-user"></i> Soyad</dt>
                <dd class="col-sm-9 col-md-10">@Model.LastName</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-users"></i> Kişi Tipi</dt>
                <dd class="col-sm-9 col-md-10">@Model.PersonType</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-birthday-cake"></i> Yaş</dt>
                <dd class="col-sm-9 col-md-10">@Model.Age</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-flag"></i> Uyruk</dt>
                <dd class="col-sm-9 col-md-10">@Model.Nationality</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-passport"></i> Pasaport Numarası</dt>
                <dd class="col-sm-9 col-md-10">@Model.PassportNumber</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div> 
