@model List<SD_Turizm.Web.Models.DTOs.RoleDto>
@{
    ViewData["Title"] = "Rol Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-warning rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-user-shield fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Rol Yönetimi</h1>
                <p class="text-muted mb-0">Sistem rollerini yönetin</p>
            </div>
        </div>
        <a href="@Url.Action("Create", "Role")" class="btn btn-warning">
            <i class="fas fa-plus me-2"></i>Yeni Rol
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Rol Listesi
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            <th>Açıklama</th>
                            <th>Durum</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-warning rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <span class="text-white fw-bold">@role.Name.Substring(0, 1).ToUpper()</span>
                                            </div>
                                            <span class="fw-medium">@role.Name</span>
                                        </div>
                                    </td>
                                    <td>@(role.Description ?? "-")</td>
                                    <td>
                                        <span class="badge @(role.IsActive ? "bg-success" : "bg-danger")">
                                            <i class="fas @(role.IsActive ? "fa-check-circle" : "fa-times-circle") me-1"></i>@(role.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">@role.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "Role", new { id = role.Id })" 
                                               class="btn btn-sm btn-outline-info" title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Role", new { id = role.Id })" 
                                               class="btn btn-sm btn-outline-warning" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("Permissions", "Role", new { id = role.Id })" 
                                               class="btn btn-sm btn-outline-primary" title="İzinler">
                                                <i class="fas fa-key"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Role", new { id = role.Id })" 
                                               class="btn btn-sm btn-outline-danger" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="text-muted">
                                        <i class="fas fa-user-shield fa-3x mb-3"></i>
                                        <p class="mb-0">Henüz rol bulunmuyor.</p>
                                        <small>Yeni rol eklemek için yukarıdaki butonu kullanın.</small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
}

.btn-group .btn {
    border-radius: 0;
}

.btn-group .btn:first-child {
    border-top-left-radius: 0.375rem;
    border-bottom-left-radius: 0.375rem;
}

.btn-group .btn:last-child {
    border-top-right-radius: 0.375rem;
    border-bottom-right-radius: 0.375rem;
}
</style>
