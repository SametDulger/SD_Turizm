@model SD_Turizm.Web.Models.DTOs.HotelPriceDto

@{
    ViewData["Title"] = "Otel Fiyatı Ekle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-plus fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Otel Fiyatı Ekle</h1>
                <p class="text-muted mb-0">Yeni otel fiyatı oluşturun</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-plus me-2"></i>Yeni Otel Fiyatı
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HotelId" class="form-label"><i class="fas fa-hotel"></i> Otel</label>
                        <select asp-for="HotelId" class="form-select" asp-items="ViewBag.HotelId" required>
                            <option value="">Otel Seçin</option>
                        </select>
                        <span asp-validation-for="HotelId" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomType" class="form-label"><i class="fas fa-bed"></i> Oda Tipi</label>
                        <select asp-for="RoomType" class="form-select" required>
                            <option value="">Oda Tipi Seçin</option>
                            @if(ViewBag.RoomTypes != null)
                            {
                                @foreach (var roomType in ViewBag.RoomTypes)
                                {
                                    <option value="@roomType.GetProperty("code").GetString()">@roomType.GetProperty("name").GetString()</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RoomType" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomLocation" class="form-label"><i class="fas fa-map-marker-alt"></i> Oda Konumu</label>
                        <select asp-for="RoomLocation" class="form-select" required>
                            <option value="">Oda Konumu Seçin</option>
                            @if (ViewBag.RoomLocations != null)
                            {
                                @foreach (var roomLocation in ViewBag.RoomLocations)
                                {
                                    <option value="@roomLocation.GetProperty("code").GetString()">@roomLocation.GetProperty("name").GetString()</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="RoomLocation" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="BoardType" class="form-label"><i class="fas fa-utensils"></i> Pansiyon Tipi</label>
                        <select asp-for="BoardType" class="form-select" required>
                            <option value="">Pansiyon Tipi Seçin</option>
                            @if (ViewBag.BoardTypes != null)
                            {
                                @foreach (var boardType in ViewBag.BoardTypes)
                                {
                                    <option value="@boardType.GetProperty("code").GetString()">@boardType.GetProperty("name").GetString()</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="BoardType" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="AdultPrice" class="form-label"><i class="fas fa-user"></i> Yetişkin Fiyatı</label>
                        <input asp-for="AdultPrice" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="AdultPrice" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label asp-for="ChildPrice" class="form-label"><i class="fas fa-child"></i> Çocuk Fiyatı</label>
                        <input asp-for="ChildPrice" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="ChildPrice" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label asp-for="InfantPrice" class="form-label"><i class="fas fa-baby"></i> Bebek Fiyatı</label>
                        <input asp-for="InfantPrice" class="form-control" type="number" step="0.01" required />
                        <span asp-validation-for="InfantPrice" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Currency" class="form-label"><i class="fas fa-money-bill-wave"></i> Para Birimi</label>
                        <select asp-for="Currency" class="form-select" required>
                            <option value="">Para Birimi Seçin</option>
                            @if (ViewBag.Currencies != null)
                            {
                                @foreach (var currency in ViewBag.Currencies)
                                {
                                    <option value="@currency.GetProperty("code").GetString()">
                                        @currency.GetProperty("flag").GetString() @currency.GetProperty("code").GetString() - @currency.GetProperty("name").GetString()
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Currency" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 
