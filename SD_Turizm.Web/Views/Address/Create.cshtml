@model SD_Turizm.Web.Models.DTOs.AddressDto

@{
    ViewData["Title"] = "Yeni Adres";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-map-marker-alt fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Yeni Adres</h1>
                <p class="text-muted mb-0">Yeni bir adres kaydı oluşturun</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-plus me-2"></i>Yeni Adres
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">
                                <i class="fas fa-globe me-1"></i>Ülke
                            </label>
                            <input asp-for="Country" class="form-control" required />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">
                                <i class="fas fa-city me-1"></i>Şehir
                            </label>
                            <input asp-for="City" class="form-control" required />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="District" class="form-label">
                                <i class="fas fa-map me-1"></i>İlçe
                            </label>
                            <input asp-for="District" class="form-control" required />
                            <span asp-validation-for="District" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Neighborhood" class="form-label">
                                <i class="fas fa-home me-1"></i>Mahalle
                            </label>
                            <input asp-for="Neighborhood" class="form-control" required />
                            <span asp-validation-for="Neighborhood" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Street" class="form-label">
                                <i class="fas fa-road me-1"></i>Cadde
                            </label>
                            <input asp-for="Street" class="form-control" required />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Number" class="form-label">
                                <i class="fas fa-hashtag me-1"></i>Numara
                            </label>
                            <input asp-for="Number" class="form-control" required />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap 5 validation script
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 
