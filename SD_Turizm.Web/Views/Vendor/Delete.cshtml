@model SD_Turizm.Web.Models.DTOs.VendorDto

@{
    ViewData["Title"] = "Tedarikçi Sil";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-trash text-danger me-2"></i>Tedarikçi Sil
        </h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-exclamation-triangle me-2"></i>Silme Onayı
            </h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>Dikkat!
                </h4>
                <p>Bu tedarikçiyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">ID:</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Kod:</dt>
                        <dd class="col-sm-8">@Model.Code</dd>

                        <dt class="col-sm-4">Ad:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Tür:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.Type</span>
                        </dd>

                        <dt class="col-sm-4">Ülke:</dt>
                        <dd class="col-sm-8">@Model.Country</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Telefon:</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">E-posta:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Durum:</dt>
                        <dd class="col-sm-8">
                                                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                            @(Model.IsActive ? "Aktif" : "Pasif")
                                        </span>
                        </dd>

                        <dt class="col-sm-4">Adres:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <dt class="fw-bold">Açıklama:</dt>
                        <dd>@Model.Description</dd>
                    </div>
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash me-2"></i>Evet, Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                        <i class="fas fa-times me-2"></i>İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
