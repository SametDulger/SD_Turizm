@model SD_Turizm.Web.Models.DTOs.PackageItemDto

@{
    ViewData["Title"] = "Paket Öğesi Düzenle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-edit fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Paket Öğesi Düzenle</h1>
                <p class="text-muted mb-0">Paket öğesi bilgilerini güncelleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="fas fa-box-open"></i> Paket Öğesi Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PackageId" class="form-label"><i class="fas fa-box"></i> Paket</label>
                        <select asp-for="PackageId" class="form-select" asp-items="ViewBag.PackageId" required>
                            <option value="">Paket Seçin</option>
                        </select>
                        <span asp-validation-for="PackageId" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="ItemType" class="form-label"><i class="fas fa-tag"></i> Öğe Türü</label>
                        <select asp-for="ItemType" class="form-select" required>
                            <option value="">Öğe Türü Seçin</option>
                            @if (ViewBag.VendorTypes != null)
                            {
                                @foreach (var vendorType in ViewBag.VendorTypes)
                                {
                                    <option value="@vendorType.GetProperty("code").GetString()">@vendorType.GetProperty("name").GetString()</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ItemType" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ItemId" class="form-label"><i class="fas fa-list"></i> Öğe</label>
                        <select asp-for="ItemId" class="form-select" asp-items="ViewBag.ItemId" required>
                            <option value="">Öğe Seçin</option>
                        </select>
                        <span asp-validation-for="ItemId" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Sequence" class="form-label"><i class="fas fa-sort-numeric-up"></i> Sıra</label>
                        <input asp-for="Sequence" class="form-control" type="number" min="1" required />
                        <span asp-validation-for="Sequence" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"><i class="fas fa-sticky-note"></i> Notlar</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap 5 form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 