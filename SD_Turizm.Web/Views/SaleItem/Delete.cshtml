@model SD_Turizm.Web.Models.DTOs.SaleItemDto

@{
    ViewData["Title"] = "Satış Kalemi Sil";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-danger rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-trash-alt fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Satış Kalemi Sil</h1>
                <p class="text-muted mb-0">Satış kalemi kaydını silin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h6 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Satış Kalemi Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Dikkat!</h5>
                <p class="mb-0">Bu satış kalemini silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
            </div>
            
            <dl class="row">
                <dt class="col-sm-3 col-md-2"><i class="fas fa-hashtag"></i> ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.Id</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-receipt"></i> Satış ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.SaleId</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-tag"></i> Kalem Tipi</dt>
                <dd class="col-sm-9 col-md-10">@Model.ItemType</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-hashtag"></i> Kalem ID</dt>
                <dd class="col-sm-9 col-md-10">@Model.ItemId</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-sort-numeric-up"></i> Miktar</dt>
                <dd class="col-sm-9 col-md-10">@Model.Quantity</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-money-bill-wave"></i> Birim Fiyat</dt>
                <dd class="col-sm-9 col-md-10">@Model.UnitPrice</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-calculator"></i> Toplam Fiyat</dt>
                <dd class="col-sm-9 col-md-10">@Model.TotalPrice</dd>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div> 
