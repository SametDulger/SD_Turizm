@model SD_Turizm.Web.Models.DTOs.ExchangeRateDto

@{
    ViewData["Title"] = "Döviz Kuru Düzenle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-edit fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Döviz Kuru Düzenle</h1>
                <p class="text-muted mb-0">Döviz kuru bilgilerini güncelleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="fas fa-exchange-alt"></i> Döviz Kuru Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FromCurrency" class="form-label"><i class="fas fa-arrow-right"></i> Kaynak Para Birimi</label>
                        <select asp-for="FromCurrency" class="form-select" required>
                            <option value="">Para Birimi Seçin</option>
                            @if(ViewBag.Currencies != null)
                            {
                                @foreach (var currency in ViewBag.Currencies)
                                {
                                    <option value="@currency.GetProperty("code").GetString()">
                                        @currency.GetProperty("flag").GetString() @currency.GetProperty("code").GetString() - @currency.GetProperty("name").GetString()
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="FromCurrency" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="ToCurrency" class="form-label"><i class="fas fa-arrow-left"></i> Hedef Para Birimi</label>
                        <select asp-for="ToCurrency" class="form-select" required>
                            <option value="">Para Birimi Seçin</option>
                            @if(ViewBag.Currencies != null)
                            {
                                @foreach (var currency in ViewBag.Currencies)
                                {
                                    <option value="@currency.GetProperty("code").GetString()">
                                        @currency.GetProperty("flag").GetString() @currency.GetProperty("code").GetString() - @currency.GetProperty("name").GetString()
                                    </option>
                                }
                            }
                        </select>
                        <span asp-validation-for="ToCurrency" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Rate" class="form-label"><i class="fas fa-percentage"></i> Kur</label>
                        <input asp-for="Rate" class="form-control" type="number" step="0.0001" required />
                        <span asp-validation-for="Rate" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Date" class="form-label"><i class="fas fa-calendar"></i> Tarih</label>
                        <input asp-for="Date" class="form-control" type="date" required />
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap 5 form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 
