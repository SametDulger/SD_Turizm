@model SD_Turizm.Web.Models.DTOs.HotelDto

@{
    ViewData["Title"] = "Otel Detayları";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-info rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-info-circle fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Otel Detayları</h1>
                <p class="text-muted mb-0">Otel bilgilerini görüntüleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h6 class="mb-0"><i class="fas fa-hotel"></i> Otel Bilgileri</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 col-md-2"><i class="fas fa-barcode"></i> Otel Kodu</dt>
                <dd class="col-sm-9 col-md-10">@Model.Code</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-hotel"></i> Otel Adı</dt>
                <dd class="col-sm-9 col-md-10">@Model.Name</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-user"></i> Cari Kodu</dt>
                <dd class="col-sm-9 col-md-10">@Model.CariCode</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-bed"></i> Oda Tipleri</dt>
                <dd class="col-sm-9 col-md-10">@Model.RoomTypes</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-map-marker-alt"></i> Oda Konumları</dt>
                <dd class="col-sm-9 col-md-10">@Model.RoomLocations</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-sticky-note"></i> Notlar</dt>
                <dd class="col-sm-9 col-md-10">@Model.Notes</dd>
                
                <dt class="col-sm-3 col-md-2"><i class="fas fa-calendar-plus"></i> Oluşturulma Tarihi</dt>
                <dd class="col-sm-9 col-md-10">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
                
                @if (Model.UpdatedDate.HasValue)
                {
                    <dt class="col-sm-3 col-md-2"><i class="fas fa-calendar-check"></i> Güncellenme Tarihi</dt>
                    <dd class="col-sm-9 col-md-10">@Model.UpdatedDate.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }
            </dl>
            
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Düzenle</a>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-list"></i> Listeye Dön</a>
            </div>
        </div>
    </div>
</div> 
