@model SD_Turizm.Web.Models.DTOs.HotelDto

@{
    ViewData["Title"] = "Otel Düzenle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-edit fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Otel Düzenle</h1>
                <p class="text-muted mb-0">Otel bilgilerini güncelleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="fas fa-hotel"></i> Otel Bilgileri</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label"><i class="fas fa-barcode"></i> Otel Kodu</label>
                        <input asp-for="Code" class="form-control" required />
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label"><i class="fas fa-hotel"></i> Otel Adı</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CariCode" class="form-label"><i class="fas fa-user"></i> Cari Kodu</label>
                        <input asp-for="CariCode" class="form-control" required />
                        <span asp-validation-for="CariCode" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomTypes" class="form-label"><i class="fas fa-bed"></i> Oda Tipleri</label>
                        <input asp-for="RoomTypes" class="form-control" placeholder="SGL, DBL, TRP, DBL+1, TRP+1" required />
                        <span asp-validation-for="RoomTypes" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RoomLocations" class="form-label"><i class="fas fa-map-marker-alt"></i> Oda Konumları</label>
                        <input asp-for="RoomLocations" class="form-control" placeholder="DNZ, GNL, PRK" required />
                        <span asp-validation-for="RoomLocations" class="text-danger small"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label"><i class="fas fa-sticky-note"></i> Notlar</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger small"></span>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-times"></i> İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap 5 form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 
