@model SD_Turizm.Web.Models.DTOs.TransferPriceDto

@{
    ViewData["Title"] = "Transfer Fiyatı Düzenle";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-edit fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Transfer Fiyatı Düzenle</h1>
                <p class="text-muted mb-0">Transfer fiyat bilgilerini güncelleyin</p>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
            <i class="fas fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-warning text-dark">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-edit me-2"></i>Transfer Fiyatı Düzenleme
            </h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="TransferId" class="form-label">
                                <i class="fas fa-id-card me-1"></i>Transfer Şirketi
                            </label>
                            <select asp-for="TransferId" class="form-select" asp-items="ViewBag.TransferCompanyId" required>
                                <option value="">Transfer Şirketi Seçin</option>
                            </select>
                            <span asp-validation-for="TransferId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Currency" class="form-label">
                                <i class="fas fa-money-bill-wave me-1"></i>Para Birimi
                            </label>
                            <select asp-for="Currency" class="form-select" required>
                                <option value="">Para Birimi Seçin</option>
                                @if (ViewBag.Currencies != null)
                                {
                                    @foreach (var currency in ViewBag.Currencies)
                                    {
                                        <option value="@currency.GetProperty("code").GetString()">
                                            @currency.GetProperty("flag").GetString() @currency.GetProperty("code").GetString() - @currency.GetProperty("name").GetString()
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="AdultPrice" class="form-label">
                                <i class="fas fa-user me-1"></i>Yetişkin Fiyatı
                            </label>
                            <input asp-for="AdultPrice" class="form-control" type="number" step="0.01" required />
                            <span asp-validation-for="AdultPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="ChildPrice" class="form-label">
                                <i class="fas fa-child me-1"></i>Çocuk Fiyatı
                            </label>
                            <input asp-for="ChildPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ChildPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="InfantPrice" class="form-label">
                                <i class="fas fa-baby me-1"></i>Bebek Fiyatı
                            </label>
                            <input asp-for="InfantPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="InfantPrice" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save me-1"></i>Güncelle
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Bootstrap 5 validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
} 