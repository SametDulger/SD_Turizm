@{
    ViewData["Title"] = "Giriş";
}

<style>
    .login-container {
        min-height: 100vh;
        background: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
    }

    .login-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 2rem;
        max-width: 400px;
        width: 100%;
        border: 1px solid #dee2e6;
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-logo {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #007bff;
    }

    .login-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .login-subtitle {
        color: #666;
        font-size: 0.9rem;
    }

    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 0.75rem;
        font-size: 1rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        outline: 0;
    }

    .login-btn {
        background: #007bff;
        border: none;
        border-radius: 5px;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 500;
        color: white;
        width: 100%;
        transition: background-color 0.15s ease-in-out;
    }

    .login-btn:hover {
        background: #0056b3;
        color: white;
    }

    .demo-info {
        background: #e7f3ff;
        border: 1px solid #b3d9ff;
        border-radius: 5px;
        padding: 1rem;
        margin-top: 1.5rem;
        font-size: 0.85rem;
    }

    .demo-title {
        font-weight: 600;
        color: #0056b3;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .demo-credentials {
        color: #333;
        line-height: 1.4;
    }

    .demo-credentials strong {
        color: #333;
        font-weight: 600;
    }

    .back-link {
        text-align: center;
        margin-top: 1.5rem;
    }

    .back-link a {
        color: #007bff;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.15s ease-in-out;
    }

    .back-link a:hover {
        color: #0056b3;
    }

    @@media (max-width: 768px) {
        .login-card {
            margin: 1rem;
            padding: 1.5rem;
        }
        
        .login-logo {
            font-size: 1.75rem;
        }
        
        .login-title {
            font-size: 1.25rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <div class="login-logo">
                <i class="fas fa-plane"></i>
            </div>
            <h1 class="login-title">SD Turizm</h1>
            <p class="login-subtitle">Yönetim Sistemi Giriş</p>
        </div>
        
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label for="username" class="form-label">
                    <i class="fas fa-user"></i> Kullanıcı Adı
                </label>
                <input type="text" class="form-control" id="username" name="username" 
                       placeholder="Kullanıcı adınızı girin" required />
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">
                    <i class="fas fa-lock"></i> Şifre
                </label>
                <input type="password" class="form-control" id="password" name="password" 
                       placeholder="Şifrenizi girin" required />
            </div>
            
            <div class="mb-3">
                <button type="submit" class="login-btn">
                    <i class="fas fa-sign-in-alt"></i> Giriş Yap
                </button>
            </div>
        </form>
        
        <div class="demo-info">
            <div class="demo-title">
                <i class="fas fa-info-circle"></i> Demo Kullanıcı Bilgileri
            </div>
            <div class="demo-credentials">
                <strong>Kullanıcı Adı:</strong> admin<br>
                <strong>Şifre:</strong> Admin123!
            </div>
        </div>
        
        <div class="back-link">
            <a href="@Url.Action("Index", "Home")">
                <i class="fas fa-arrow-left"></i> Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            console.log('SD Turizm Login sayfası yüklendi');
        });
    </script>
} 