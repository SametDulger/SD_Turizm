@model IEnumerable<SD_Turizm.Web.Models.DTOs.CariTransactionDto>

@{
    ViewData["Title"] = "Cari İşlem Listesi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div class="d-flex align-items-center">
            <div class="bg-gradient-primary rounded-circle p-3 me-3 shadow-sm">
                <i class="fas fa-book fa-2x text-white"></i>
            </div>
            <div>
                <h1 class="h2 mb-0 text-dark fw-bold">Cari İşlem Listesi</h1>
                <p class="text-muted mb-0">Tüm cari işlemlerinizi görüntüleyin ve yönetin</p>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus me-2"></i>Yeni Cari İşlem
        </a>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 fw-bold">
                <i class="fas fa-list me-2"></i>Cari İşlemler
            </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="cariTransactionTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cari Kod</th>
                            <th>İşlem Tipi</th>
                            <th>Tutar</th>
                            <th>Para Birimi</th>
                            <th>Tarih</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CariCode</td>
                                <td>
                                    @{
                                        string typeName = item.TransactionType;
                                        if (ViewBag.TransactionTypes != null)
                                        {
                                            foreach (var tt in ViewBag.TransactionTypes)
                                            {
                                                if (tt.GetProperty("code").GetString() == item.TransactionType)
                                                {
                                                    typeName = tt.GetProperty("name").GetString();
                                                    break;
                                                }
                                            }
                                        }
                                        var badgeClass = item.TransactionType switch
                                        {
                                            "Debit" => "bg-danger",
                                            "Credit" => "bg-success",
                                            "BORC" => "bg-danger",
                                            "ALACAK" => "bg-success",
                                            "Expense" => "bg-danger",
                                            "Income" => "bg-success",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@typeName</span>
                                </td>
                                <td>@item.Amount.ToString("N2")</td>
                                <td>@item.Currency</td>
                                <td>@item.TransactionDate.ToString("dd.MM.yyyy")</td>
                                <td>@item.Description</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cariTransactionTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']]
            });
        });
    </script>
} 
